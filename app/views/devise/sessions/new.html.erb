<!-- app/views/users/sessions/new.html.erb -->
<div class="w-full min-h-screen bg-gray-50 flex items-center justify-center">
  <div class="flex items-center justify-center h-screen bg-gray-50 m-0 p-0">
    <!-- Card centralizado com largura máxima definida -->
    <div class="flex flex-row bg-white rounded-2xl shadow-lg overflow-hidden w-full max-w-4xl">
      <!-- Área do formulário de login (50% da largura) -->
      <div class="w-1/2 p-10 flex flex-col justify-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-5">
            <%= f.label :email, "E-mail", class: "block text-gray-700 font-medium" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
          </div>
          <div class="mb-5">
            <%= f.label :password, "Senha", class: "block text-gray-700 font-medium" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
          </div>
          <div class="flex items-center justify-center">
            <%= f.submit "Entrar", class: "w-full py-2 px-4 bg-[#615f4a] text-white rounded-lg shadow hover:bg-[#4b493f]" %>
          </div>
          <div class="mt-4 text-center">
            <%= link_to "Validar documento", new_signature_validation_path, class: "text-sm text-gray-600 underline" %>
          </div>
        <% end %>
      </div>
      <!-- Área da logo (50% da largura), com a imagem centralizada -->
      <div class="w-1/2 p-10 flex items-center justify-center">
        <%= image_tag "logo_alimenz_500x500.png", alt: "Logo", class: "max-w-[250px] max-h-[250px] object-contain mx-auto rounded-lg" %>
      </div>
    </div>
  </div>
</div>
