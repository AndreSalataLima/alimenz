<%= render 'customers/shared/navbar', titulo: "Detalhes do Pedido de Compra" %>

<div class="container mx-auto py-6 px-4">
  <div class="bg-white shadow-lg rounded-xl p-6 mb-8">
    <p class="mb-4 text-gray-700"><strong>Fornecedor:</strong> <%= @purchase_order.supplier.name %></p>
    <p class="mb-4 text-gray-700"><strong>Valor Total:</strong> <%= real_currency(@purchase_order.total_value) %></p>
    <p class="mb-4 text-gray-700"><strong>Data de Validade:</strong> <%= @purchase_order.expiration_date.strftime('%d/%m/%Y') if @purchase_order.expiration_date %></p>
    <p class="mb-4 text-gray-700"><strong>Status:</strong> <%= @purchase_order.status.capitalize %></p>

    <h2 class="text-lg font-bold text-gray-800 mt-6 mb-4">Itens do Pedido</h2>
    <% if @purchase_order.purchase_order_items.any? %>
      <div class="overflow-x-auto rounded-lg border border-gray-200">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left">Produto</th>
              <th class="px-4 py-2 text-left">Quantidade</th>
              <th class="px-4 py-2 text-left">Unidade</th>
              <th class="px-4 py-2 text-left">Preço Unitário</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @purchase_order.purchase_order_items.each do |item| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2">
                  <div>
                    <%= item.product.generic_name %>
                    <% comment = @purchase_order.quotation.quotation_items.find_by(product_id: item.product_id)&.product_comment %>
                    <% if comment.present? %>
                      <div class="text-gray-500 italic text-sm mt-1">
                        Obs: <%= comment %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="px-4 py-2"><%= item.quantity %></td>
                <td class="px-4 py-2"><%= item.unit %></td>
                <td class="px-4 py-2"><%= real_currency(item.price) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">Nenhum item registrado.</p>
    <% end %>

    <div class="mt-6">
      <%= link_to "Voltar", purchase_orders_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-700" %>
    </div>
  </div>
</div>
