<div class="min-h-screen bg-gray-50 p-6 flex justify-center">
  <div class="bg-white w-full max-w-3xl rounded-2xl shadow p-8">
    <div class="flex items-center gap-3 bg-green-50 text-green-800 rounded-lg p-4 mb-6">
      <span class="font-semibold">Documento com assinatura válida</span>
    </div>

    <h2 class="text-lg font-semibold mb-2">Informações gerais do documento</h2>
    <div class="text-sm text-gray-700 space-y-1 mb-6">
      <% if @title.present? %><p><strong>Título:</strong> <%= @title %></p><% end %>
      <p><strong>Código de rastreio:</strong> <%= @tracking_id %></p>
      <p><strong>Itens cotados:</strong> <%= @items_count %></p>
      <p><strong>Valor total (R$):</strong> <%= number_to_currency(@total_value, unit: "R$ ", separator: ",", delimiter: ".") %></p>
    </div>

    <h2 class="text-lg font-semibold mb-2">Dados da assinatura</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6 text-sm text-gray-700">
      <div>
        <p class="font-medium mb-1">Entidade (Cliente)</p>
        <p><strong>Nome:</strong> <%= @customer_data[:name] %></p>
        <% if @customer_data[:trade_name].present? %><p><strong>Nome Fantasia:</strong> <%= @customer_data[:trade_name] %></p><% end %>
        <p><strong>CNPJ:</strong> <%= @customer_data[:cnpj] %></p>
      </div>
      <div>
        <p class="font-medium mb-1">Fornecedor (Assinante)</p>
        <p><strong>Nome:</strong> <%= @supplier_data[:name] %></p>
        <% if @supplier_data[:trade_name].present? %><p><strong>Nome Fantasia:</strong> <%= @supplier_data[:trade_name] %></p><% end %>
        <p><strong>CNPJ:</strong> <%= @supplier_data[:cnpj] %></p>
        <% if @signed_at.present? %><p><strong>Data da assinatura:</strong> <%= l(@signed_at.in_time_zone, format: "%d/%m/%Y %H:%M:%S") %> BRT</p><% end %>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <%= link_to "Baixar proposta (PDF)", signature_validation_pdf_path(@tracking_id),
          class: "py-2 px-4 bg-[#615f4a] text-white rounded-lg hover:bg-[#4b493f]" %>
      <%= link_to "Validar outro documento", new_signature_validation_path,
          class: "py-2 px-4 border rounded-lg" %>
    </div>
  </div>
</div>
