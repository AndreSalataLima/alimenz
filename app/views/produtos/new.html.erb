<h1>Novo Produto</h1>

<%= form_for @produto do |f| %>
  <div>
    <%= f.label :nome_generico %>
    <%= f.text_field :nome_generico %>
  </div>
  <div>
    <%= f.label :marca %>
    <%= f.text_field :marca %>
  </div>
  <div>
    <%= f.label :opcoes_unidades %>
    <%= f.text_field :opcoes_unidades %>
  </div>
  <div>
    <%= f.label :commission_percentage %>
    <%= f.number_field :commission_percentage, step: 0.01 %>
  </div>
  <div>
    <%= f.submit "Criar Produto" %>
  </div>
<% end %>
