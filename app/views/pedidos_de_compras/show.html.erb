<h1>Detalhes do Pedido de Compra</h1>

<p>
  <strong>Fornecedor:</strong>
  <%= @pedido.fornecedor.nome %>
</p>

<p>
  <strong>Valor Total:</strong>
  <%= number_to_currency(@pedido.valor_total) %>
</p>

<p>
  <strong>Data de Validade:</strong>
  <%= @pedido.data_validade %>
</p>

<p>
  <strong>Status:</strong>
  <%= @pedido.status.capitalize %>
</p>

<h2>Itens do Pedido</h2>
<% if @pedido.itens.present? %>
  <ul>
    <% @pedido.itens.each do |chave, valor| %>
      <li><strong><%= chave %>:</strong> <%= valor %></li>
    <% end %>
  </ul>
<% else %>
  <p>Nenhum item registrado.</p>
<% end %>

<%= link_to "Voltar", pedidos_de_compras_path, class: "text-blue-500 underline" %>
