<%= render 'suppliers/shared/navbar', titulo: "Assinar Cotação Digitalmente" %>

<div class="container mx-auto py-6 px-4">
  <div class="bg-white shadow rounded-lg p-6 max-w-xl mx-auto">
    <h2 class="text-xl font-bold mb-4">Assinatura Digital</h2>

    <p class="mb-4 text-gray-700">Para assinar digitalmente esta resposta de cotação, confirme sua senha de login.</p>

    <%= form_with url: submit_digital_signature_suppliers_quotation_response_path(@quotation_response), method: :post, local: true do |f| %>
      <div class="mb-4">
        <%= label_tag :signature_password, "Senha" %>
        <%= password_field_tag :signature_password, nil, class: "w-full px-4 py-2 border rounded" %>
      </div>

      <% if flash[:alert] %>
        <p class="text-red-600 mb-2"><%= flash[:alert] %></p>
      <% end %>

      <div class="text-right">
        <%= submit_tag "Assinar", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>
