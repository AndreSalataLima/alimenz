<h1>Editar Produto</h1>

<%= form_for @product do |f| %>
  <div>
    <%= f.label :generic_name, "Nome Genérico" %>
    <%= f.text_field :generic_name %>
  </div>
  <div>
    <%= f.label :brand, "Marca" %>
    <%= f.text_field :brand %>
  </div>
  <div>
    <%= f.label :unit_options, "Opções de Unidades" %>
    <%= f.text_field :unit_options %>
  </div>
  <div>
    <%= f.label :commission_percentage, "Percentual de Comissão" %>
    <%= f.number_field :commission_percentage, step: 0.01 %>
  </div>
  <div>
    <%= f.submit "Atualizar Produto" %>
  </div>
<% end %>

<%= link_to "Voltar", products_path %>
