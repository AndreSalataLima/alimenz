              <th class="px-4 py-2 text-left">Data de Validade</th>
              <th class="px-4 py-2 text-left">Status Fornecedor</th>
              <th class="px-4 py-2 text-left">An√°lise Admin</th>
              <th class="px-4 py-2 text-left">A√ß√µes</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @respostas.each do |resposta| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2"><%= resposta.id %></td>
                <td class="px-4 py-2"><%= resposta.fornecedor.nome %></td>
                <td class="px-4 py-2">
                  <%= link_to "Cota√ß√£o ##{resposta.cotacao.id}", admin_cotacao_path(resposta.cotacao), class: "text-blue-600 hover:underline" %>
