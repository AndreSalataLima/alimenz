<h1>Lista de Usuários</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Papel</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.id %></td>
        <td><%= usuario.nome %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.papel %></td>
        <td>
          <%= link_to 'Mostrar', admin_usuario_path(usuario) %> |
          <%= link_to 'Editar', edit_admin_usuario_path(usuario) %> |
          <%= link_to 'Excluir', admin_usuario_path(usuario), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Usuário', new_admin_usuario_path %>
