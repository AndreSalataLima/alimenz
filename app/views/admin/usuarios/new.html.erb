<%= render 'admin/shared/navbar', titulo: "Criar Novo Usuário" %>

<div class="container mx-auto py-6 px-4">
  <div class="max-w-lg mx-auto bg-white shadow-lg rounded-xl p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Novo Usuário</h2>

    <!-- Exibir erros se houver -->
    <% if @usuario.errors.any? %>
      <div class="bg-red-100 text-red-700 p-3 rounded-lg mb-4">
        <strong>Erro:</strong> Não foi possível salvar o usuário.
        <ul class="mt-2 text-sm">
          <% @usuario.errors.full_messages.each do |msg| %>
            <li>- <%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @usuario, url: admin_usuarios_path, local: true, class: "space-y-4" do |f| %>

      <!-- DADOS BÁSICOS -->
      <div class="border-b pb-4">
        <h3 class="text-lg font-semibold text-gray-700">Dados Básicos</h3>

        <!-- Nome -->
        <div>
          <%= f.label :nome, "Nome", class: "block font-semibold text-gray-700" %>
          <%= f.text_field :nome, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, "Email", class: "block font-semibold text-gray-700" %>
          <%= f.email_field :email, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Senha -->
        <div>
          <%= f.label :password, "Senha", class: "block font-semibold text-gray-700" %>
          <%= f.password_field :password, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Papel (Admin, Cliente, Fornecedor) -->
        <div>
          <%= f.label :papel, "Tipo de Usuário", class: "block font-semibold text-gray-700" %>
          <%= f.select :papel,
                [['Administrador', 'admin'], ['Cliente', 'cliente'], ['Fornecedor', 'fornecedor']],
                { prompt: "Selecione um papel" },
                class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm bg-white focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>
      </div>

      <!-- DADOS DE CONTATO -->
      <div class="border-b pb-4">
        <h3 class="text-lg font-semibold text-gray-700">Contato</h3>

        <!-- Telefone -->
        <div>
          <%= f.label :telefone, "Telefone", class: "block font-semibold text-gray-700" %>
          <%= f.text_field :telefone, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Endereço -->
        <div>
          <%= f.label :endereco, "Endereço", class: "block font-semibold text-gray-700" %>
          <%= f.text_area :endereco, rows: 2, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>
      </div>

      <!-- DADOS DA EMPRESA (CNPJ, Responsável, Comissão, Logo) -->
      <div>
        <h3 class="text-lg font-semibold text-gray-700">Dados da Empresa</h3>

        <!-- CNPJ -->
        <div>
          <%= f.label :cnpj, "CNPJ", class: "block font-semibold text-gray-700" %>
          <%= f.text_field :cnpj, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Responsável -->
        <div>
          <%= f.label :responsavel, "Nome do Responsável", class: "block font-semibold text-gray-700" %>
          <%= f.text_field :responsavel, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Comissão -->
        <div>
          <%= f.label :commission_percentage, "Percentual de Comissão (%)", class: "block font-semibold text-gray-700" %>
          <%= f.number_field :commission_percentage, step: 0.1, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>

        <!-- Logo -->
        <div>
          <%= f.label :logo, "Logo da Empresa", class: "block font-semibold text-gray-700" %>
          <%= f.file_field :logo, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-500" %>
        </div>
      </div>

      <!-- Botões -->
      <div class="flex justify-between mt-6">
        <%= link_to "Cancelar", admin_dashboard_index_path, class: "px-4 py-2 bg-gray-300 text-gray-700 rounded-lg shadow hover:bg-gray-400" %>
        <%= f.submit "Criar Usuário", class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
