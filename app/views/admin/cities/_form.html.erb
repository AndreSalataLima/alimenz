<%= form_with model: [:admin, @city], local: true, class: "space-y-4" do |f| %>
  <% if @city.errors.any? %>
    <div class="bg-red-100 text-red-700 p-3 rounded-lg">
      <strong>Erros:</strong>
      <ul class="mt-2 text-sm">
        <% @city.errors.full_messages.each do |msg| %><li>- <%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :state_id, "Estado", class: "block font-semibold text-gray-700" %>
    <%= f.collection_select :state_id, State.order(:code), :id, :code,
          { prompt: "Selecione um Estado" },
          class: "w-full mt-1 px-3 py-2 border rounded-lg bg-white" %>
  </div>

  <div>
    <%= f.label :name, "Nome da Cidade", class: "block font-semibold text-gray-700" %>
    <%= f.text_field :name, class: "w-full mt-1 px-3 py-2 border rounded-lg" %>
  </div>

  <div class="flex justify-between mt-6">
    <%= link_to "Cancelar", admin_cities_path, class: "px-4 py-2 bg-gray-300 rounded-lg" %>
    <%= f.submit(@city.new_record? ? "Criar Cidade" : "Atualizar Cidade",
                 class: "px-4 py-2 bg-blue-600 text-white rounded-lg") %>
  </div>
<% end %>
