<%= render 'admin/shared/navbar', titulo: "Editar produto" %>

<div class="container mx-auto py-6 px-4">
  <div class="max-w-xl mx-auto bg-white shadow-md rounded-xl p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-6 text-center">Editar Produto</h2>

    <%= form_with model: [:admin, @product], local: true do |f| %>
      <div class="space-y-4">

        <div>
          <%= f.label :generic_name, "Nome Genérico", class: "block text-gray-700 font-semibold" %>
          <%= f.text_field :generic_name, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
        </div>

        <div>
          <%= f.label :category_id, "Categoria", class: "block text-gray-700 font-semibold" %>
          <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Selecione uma categoria" }, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
        </div>

        <div>
          <%= f.label :unit_options, "Opções de Unidade (separadas por vírgula)", class: "block text-gray-700 font-semibold" %>
          <%= f.text_field :unit_options, value: @product.unit_options&.join(", "), class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
        </div>

        <div class="flex justify-between mt-6">
          <%= link_to "Cancelar", admin_product_path(@product), class: "bg-gray-400 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-500" %>
          <%= f.submit "Atualizar Produto", class: "bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700" %>
        </div>

      </div>
    <% end %>
  </div>
</div>
