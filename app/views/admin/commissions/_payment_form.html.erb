<%= form_with model: [ :admin, commission, payment ], local: true do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Campo Data -->
    <div>
      <div class="bg-gray-50 p-4 border border-gray-200 rounded-lg shadow-sm">
        <%= f.label :payment_date, "Data do Pagamento", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.date_field :payment_date, value: payment.payment_date || Date.current, class: "block w-full border-gray-300 rounded-md p-2" %>
      </div>
    </div>

    <!-- Campo Valor -->
    <div>
      <div class="bg-gray-50 p-4 border border-gray-200 rounded-lg shadow-sm">
        <%= f.label :amount, "Valor", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :amount, step: 0.01, required: true, class: "block w-full border-gray-300 rounded-md p-2" %>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= f.submit payment.new_record? ? "Adicionar Pagamento" : "Salvar Alterações", class: "bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600" %>
  </div>
<% end %>
