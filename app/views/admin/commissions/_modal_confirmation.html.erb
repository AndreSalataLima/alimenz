<div data-commission-modal-target="modal" class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-xl shadow-lg p-6 w-full max-w-md">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Confirmar Pagamento Integral</h2>
    <p class="text-gray-700 mb-6" data-commission-modal-target="message"></p>
    <div class="flex justify-end space-x-4">
      <button data-action="click->commission-modal#confirm" class="bg-green-500 hover:bg-green-600 text-white font-medium px-4 py-2 rounded-lg">
        Confirmar
      </button>
      <button data-action="click->commission-modal#cancel" class="bg-red-500 hover:bg-red-600 text-white font-medium px-4 py-2 rounded-lg">
        Cancelar
      </button>
    </div>
  </div>
</div>
