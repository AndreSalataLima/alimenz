<%= render 'admin/shared/navbar', titulo: "Detalhes do Fornecedor" %>

<div class="container mx-auto py-6 px-4">
  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-xl p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= @supplier.name %></h2>

    <div class="space-y-4">
      <p><strong>Email:</strong> <%= @supplier.email %></p>
      <p><strong>Telefone:</strong> <%= @supplier.phone.presence || "NÃ£o informado" %></p>

      <div>
        <h3 class="font-semibold text-gray-700">Assinatura:</h3>
        <% if @supplier.signature&.signature_image&.attached? %>
          <div class="border p-2 rounded-lg inline-block shadow-sm">
            <%= image_tag @supplier.signature.signature_image, width: 200, class: "rounded-lg" %>
          </div>
        <% else %>
          <p class="text-gray-500">Nenhuma assinatura cadastrada.</p>
        <% end %>
      </div>

      <div>
        <h3 class="font-semibold text-gray-700">Carimbo:</h3>
        <% if @supplier.signature&.stamp_image&.attached? %>
          <div class="border p-2 rounded-lg inline-block shadow-sm">
            <%= image_tag @supplier.signature.stamp_image, width: 200, class: "rounded-lg" %>
          </div>
        <% else %>
          <p class="text-gray-500">Nenhum carimbo cadastrado.</p>
        <% end %>
      </div>
    </div>

    <div class="mt-6 flex space-x-4">
      <%= link_to "Editar", edit_admin_supplier_path(@supplier), class: "px-4 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700" %>
      <%= link_to "Voltar", admin_suppliers_path, class: "px-4 py-2 bg-gray-400 text-white rounded-lg shadow hover:bg-gray-500" %>
    </div>
  </div>
</div>
