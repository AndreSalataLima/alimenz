<%= render 'admin/shared/navbar', titulo: "Fornecedor: #{@supplier.name}" %>

<div class="container mx-auto py-6 px-4">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

    <!-- Bloco de dados gerais -->
    <div class="bg-white shadow-md rounded-xl p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Informações Gerais</h2>
      <ul class="space-y-2 text-gray-700">
        <li><strong>Nome:</strong> <%= @supplier.name %></li>
        <li><strong>Nome Fantasia:</strong> <%= @supplier.trade_name.presence || "Não informado" %></li>
        <li><strong>Email:</strong> <%= @supplier.email %></li>
        <li><strong>Telefone:</strong> <%= @supplier.phone.presence || "Não informado" %></li>
        <li><strong>CNPJ:</strong> <%= @supplier.cnpj.presence || "Não informado" %></li>
        <li><strong>Responsável:</strong> <%= @supplier.responsible.presence || "Não informado" %></li>
        <li><strong>Endereço:</strong> <%= @supplier.address.presence || "Não informado" %></li>
      </ul>
    </div>

    <!-- Bloco de categorias -->
    <div class="bg-white shadow-md rounded-xl p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Categorias</h2>
      <% if @supplier.categories.any? %>
        <ul class="list-disc list-inside text-gray-700">
          <% @supplier.categories.each do |category| %>
            <li><%= category.name %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500">Nenhuma categoria atribuída.</p>
      <% end %>
    </div>

