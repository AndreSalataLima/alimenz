  <!-- Botões de ação -->
  <div class="mt-8 flex space-x-4">
    <%= link_to "Editar Fornecedor", edit_admin_supplier_path(@supplier), class: "px-4 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700" %>
    <%= link_to "Voltar", admin_suppliers_path, class: "px-4 py-2 bg-gray-400 text-white rounded-lg shadow hover:bg-gray-500" %>
