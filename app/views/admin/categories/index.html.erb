<%= render 'admin/shared/navbar', titulo: "Categorias" %>

<div class="container mx-auto py-6 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Categorias</h1>
    <%= link_to "Nova Categoria", new_admin_category_path,
      class: "bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600 transition" %>
  </div>

  <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Nome</th>
        <th class="px-6 py-3 text-right text-sm font-medium text-gray-700">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr class="border-t">
          <td class="px-6 py-4"><%= category.name %></td>
          <td class="px-6 py-4 text-right">
            <%= link_to "Editar", edit_admin_category_path(category),
              class: "text-indigo-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
