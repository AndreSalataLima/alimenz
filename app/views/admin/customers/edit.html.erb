<%= render 'admin/shared/navbar', titulo: "Editar Cliente" %>

<div class="container mx-auto py-6 px-4">
  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-xl p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Editar Cliente</h2>

      <%= form_with model: [:admin, @customer], scope: :user, url: admin_customer_path(@customer), method: :patch, local: true, class: "space-y-4" do |f| %>

      <!-- Nome -->
      <div>
        <%= f.label :name, "Nome", class: "block font-semibold text-gray-700" %>
        <%= f.text_field :name, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
      </div>

      <!-- Email -->
      <div>
        <%= f.label :email, "Email", class: "block font-semibold text-gray-700" %>
        <%= f.email_field :email, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
      </div>

      <!-- Telefone -->
      <div>
        <%= f.label :phone, "Telefone", class: "block font-semibold text-gray-700" %>
        <%= f.text_field :phone, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
      </div>

      <!-- CNPJ -->
      <div>
        <%= f.label :cnpj, "CNPJ", class: "block font-semibold text-gray-700" %>
        <%= f.text_field :cnpj, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
      </div>

      <!-- Responsável -->
      <div>
        <%= f.label :responsible, "Responsável", class: "block font-semibold text-gray-700" %>
        <%= f.text_field :responsible, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
      </div>

      <!-- Endereço -->
      <div>
        <%= f.label :address, "Endereço", class: "block font-semibold text-gray-700" %>
        <%= f.text_area :address, rows: 3, class: "w-full mt-1 px-3 py-2 border rounded-lg shadow-sm" %>
      </div>

      <!-- Fornecedores Bloqueados -->
<!-- Fornecedores Bloqueados (como checklist) -->
<div>
  <%= f.label :blocked_supplier_ids, "Fornecedores Bloqueados", class: "block font-semibold text-gray-700 mb-2" %>

  <div class="grid grid-cols-1 gap-2">
    <% User.suppliers.order(:name).each do |supplier| %>
      <div class="flex items-center">
        <%= check_box_tag "user[blocked_supplier_ids][]", supplier.id, @customer.blocked_supplier_ids.include?(supplier.id),
              id: "user_blocked_supplier_ids_#{supplier.id}",
              class: "mr-2" %>
        <%= label_tag "user_blocked_supplier_ids_#{supplier.id}", supplier.name, class: "text-gray-700" %>
      </div>
    <% end %>
  </div>
</div>



      <!-- Botões -->
      <div class="flex justify-between mt-6">
        <%= link_to "Cancelar", admin_customer_path(@customer), class: "px-4 py-2 bg-gray-400 text-white rounded-lg shadow hover:bg-gray-500" %>
        <%= f.submit "Atualizar Cliente", class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
