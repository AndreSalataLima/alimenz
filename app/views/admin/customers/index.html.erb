<%= render 'admin/shared/navbar', titulo: "Gerenciar Clientes" %>

<div class="container mx-auto py-6 px-4">
  <div class="bg-white shadow-lg rounded-xl p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Lista de Clientes</h2>

    <% if @customers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left">Nome</th>
              <th class="px-4 py-2 text-left">Email</th>
              <th class="px-4 py-2 text-left">Telefone</th>
              <th class="px-4 py-2 text-left">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @customers.each do |customer| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2"><%= customer.name %></td>
                <td class="px-4 py-2"><%= customer.email %></td>
                <td class="px-4 py-2"><%= customer.phone.presence || "-" %></td>
                <td class="px-4 py-2">
                  <%= link_to "Ver Detalhes", admin_customer_path(customer), class: "text-blue-600 hover:underline" %>
                  <%= link_to "Editar", edit_admin_customer_path(customer), class: "ml-4 text-green-600 hover:underline" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">Nenhum cliente cadastrado.</p>
    <% end %>
  </div>
</div>
